{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "lib": [
            "es6"
        ],
        "target": "es6",
        "noImplicitAny": true,
        "outDir": "./dist_test/",
        "preserveConstEnums": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "inlineSourceMap": true
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ]
}